Options +FollowSymLinks -MultiViews
RewriteEngine on
RewriteBase /

RewriteRule "^(.*/)?\.git/" - [F,L]

RedirectMatch seeother ^/login(\.php)? /authorization/login/index
RedirectMatch seeother ^/registration(\.php)? /authorization/registration/index

RewriteRule ^index.php$ /router.php?router=index/view [L]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([a-zA-Z0-9\-_/]+)/details/(.*?)$ /router.php?router=$1&query=$2 [L]
RewriteRule ^([a-zA-Z0-9\-_/]+)$ /router.php?router=$1& [L]
